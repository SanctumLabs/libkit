{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es2018", "ES2015", "dom", "ES2020"],
    "allowJs": true,
    "jsx": "react-native",
    "isolatedModules": true,
    "resolveJsonModule": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "skipLibCheck": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "moduleResolution": "node",
    "baseUrl": ".",
    "types": ["node/url", "node/process", "node/timers", "sanctumlabs", "jest"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true
  },
  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents"
  },
  "exclude": [
    "dist",
    "node_modules",
    "coverage",
    ".storybook",
    ".eslintrc.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "lint-staged.config.js"
  ]
}
